<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextAppearance.Semibold" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Montserrat-Semibold.ttf</item>
    </style>

    <style name="MontserratBlack" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Black.ttf</item>
    </style>

    <style name="MontserratBold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="MontserratExtraLight" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-ExtraLight.ttf</item>
    </style>

    <style name="MontserratLight" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
    </style>

    <style name="MontserratSemiBold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
    </style>

</resources>
