<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/popup_cornered_border"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:layout_marginTop="@dimen/margin_padding_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:textAppearance="@style/MontserratBold"
            android:textColor="#2b2926"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:textSize="@dimen/font_xxlarge"
            android:gravity="center"
            android:text="No Internet Connection"
            app:layout_constraintTop_toBottomOf="@id/loading"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPositive"
            style="@style/primary_button"
            android:layout_margin="@dimen/margin_padding_size_large"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/btnPositive"/>

</androidx.constraintlayout.widget.ConstraintLayout>