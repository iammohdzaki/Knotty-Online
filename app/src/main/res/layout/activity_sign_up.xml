<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewmodel"
                type="com.zaphlabs.knotty_online.ui.auth.AuthViewModel" />
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/animation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signup"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sign_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:text="@string/sign_up_text"
                android:textAppearance="@style/CustomTextAppearance.Bold"
                android:textSize="@dimen/font_xxxlarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/animation_view" />

        <com.zaphlabs.knotty_online.ui.customView.MaterialEditText
                android:id="@+id/metSignUpName"
                style="@style/edit_text_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:text="@={viewmodel.name}"
                android:hint="@string/fullname_text"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/sign_up_text"
                app:met_floatingLabelText="Your Name" />

        <com.zaphlabs.knotty_online.ui.customView.MaterialEditText
                android:id="@+id/metSignUpEmail"
                style="@style/edit_text_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:hint="Your Email"
                android:text="@={viewmodel.email}"
                app:layout_constraintTop_toBottomOf="@id/metSignUpName"
                app:met_floatingLabelText="Email" />

        <com.zaphlabs.knotty_online.ui.customView.MaterialEditText
                android:id="@+id/metSignUpPassword"
                style="@style/edit_text_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:hint="@string/password_text"
                android:text="@={viewmodel.password}"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/metSignUpEmail"
                app:met_floatingLabelText="PASSWORD" />

        <com.zaphlabs.knotty_online.ui.customView.MaterialEditText
                android:id="@+id/metSignUpConfirmPassword"
                style="@style/edit_text_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:text="@={viewmodel.confirmPassword}"
                android:hint="@string/confirm_password_text"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/metSignUpPassword"
                app:met_floatingLabelText="CONFIRM PASSWORD" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_large"
                android:onClick="@{(v) -> viewmodel.signUpUser()}"
                android:background="@drawable/selector_btn"
                android:text="@string/sign_up_text"
                android:textAppearance="@style/MontserratSemiBold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/metSignUpConfirmPassword" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/metOpenSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_padding_size_large"
                android:text="@string/already_account"
                android:textAppearance="@style/MontserratBold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_normal"
                android:onClick="@{(v) -> viewmodel.goToLogin(v)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSignUp" />

        <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/metOpenSignUp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>