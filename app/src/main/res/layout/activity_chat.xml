<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <data>
        <variable
                name="viewModel"
                type="com.zaphlabs.knotty_online.ui.chat.ChatViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chat.ChatActivity">

    <include
            android:id="@+id/toolbarChat"
        layout="@layout/layout_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_view_message_send"
            tools:itemCount="8"
            android:visibility="visible"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbarChat"
            app:layout_constraintBottom_toTopOf="@id/toolbarMessage"
            />

    <ProgressBar
            android:id="@+id/pbLoadChats"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
            android:id="@+id/tvAdditonalMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Something Bad Happened !"
            android:textSize="20sp"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <include layout="@layout/layout_send_message_toolbar"
            android:id="@+id/toolbarMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>