<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewmodel"
                type="com.zaphlabs.knotty_online.ui.onBoarding.AuthViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onBoarding.ForgotPasswordActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forgot_password"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forgot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Forgot Password"
            android:textAppearance="@style/CustomTextAppearance.Bold"
            android:textSize="@dimen/font_xxxlarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animation_view"
            />


    <com.zaphlabs.knotty_online.ui.customView.MaterialEditText
            android:id="@+id/metForgotEmail"
            style="@style/edit_text_view"
            android:text="@={viewmodel.email}"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_padding_size_large"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@id/forgot_text"
            app:met_floatingLabelText="Email" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_size_large"
            android:onClick="@{(v) -> viewmodel.resetPassword()}"
            android:background="@drawable/selector_btn"
            android:text="Reset Password"
            android:textAppearance="@style/CustomTextAppearance.Bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/metForgotEmail" />





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>