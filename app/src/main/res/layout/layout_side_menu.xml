<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_padding_size_medium">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:text="Mail"
            android:layout_marginTop="@dimen/margin_padding_size_medium"
            android:textColor="@color/black"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:textSize="@dimen/font_xxlarge"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zaki89@gmail.com"
            android:layout_marginTop="1dp"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_large"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:onClick="onClick"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:padding="@dimen/margin_padding_size_medium"
            android:drawablePadding="@dimen/spacing_large"
            android:drawableStart="@drawable/ic_favorite"
            android:layout_marginTop="@dimen/margin_padding_size_xlarge"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:onClick="onClick"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:padding="@dimen/margin_padding_size_medium"
            android:drawablePadding="@dimen/spacing_large"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_contact"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            app:layout_constraintTop_toBottomOf="@id/tvFavorites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:onClick="onClick"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:padding="@dimen/margin_padding_size_medium"
            android:drawablePadding="@dimen/spacing_large"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_rate"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            app:layout_constraintTop_toBottomOf="@id/tvContactUs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:onClick="onClick"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:padding="@dimen/margin_padding_size_medium"
            android:drawablePadding="@dimen/spacing_large"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            app:layout_constraintTop_toBottomOf="@id/tvRate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:onClick="onClick"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:padding="@dimen/margin_padding_size_medium"
            android:drawablePadding="@dimen/spacing_large"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_logout"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
           app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
